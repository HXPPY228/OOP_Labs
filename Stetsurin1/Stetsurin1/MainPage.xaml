<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stetsurin1.MainPage" 
             Title="Paint App">

    <Grid RowDefinitions="Auto, *" ColumnDefinitions="*, Auto">
        <!-- Панель инструментов -->
        <HorizontalStackLayout Grid.Row="0" BackgroundColor="Gray" Padding="10" Spacing="10">
            <Button x:Name="RectangleButton" Text="Rectangle"/>
            <Button x:Name="CircleButton" Text="Circle"/>
            <Button x:Name="TriangleButton" Text="Triangle"/>
            <Button x:Name="EraseButton" Text="Erase"/>
            <Button x:Name="UndoButton" Text="Undo"/>
            <Button x:Name="RedoButton" Text="Redo"/>
            <Button x:Name="SaveButton" Text="Save"/>
            <Button x:Name="LoadButton" Text="Load"/>
        </HorizontalStackLayout>

        <!-- Холст для рисования -->
        <GraphicsView x:Name="PaintCanvas"
              Grid.Row="1"
              BackgroundColor="White" />

    </Grid>
</ContentPage>
